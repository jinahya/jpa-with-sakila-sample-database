<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="sakilaPU">
    <description>Sakila Persistence Unit</description>
    <class>com.github.jinahya.persistence.__BaseEntity</class>
    <class>com.github.jinahya.persistence._BaseEntity</class>
    <class>com.github.jinahya.persistence._PersistenceConverters$GeometryConverter</class>
    <class>com.github.jinahya.persistence.Actor</class>
    <class>com.github.jinahya.persistence.Address</class>
    <class>com.github.jinahya.persistence.Category</class>
    <class>com.github.jinahya.persistence.City</class>
    <class>com.github.jinahya.persistence.Country</class>
    <class>com.github.jinahya.persistence.Customer</class>
    <class>com.github.jinahya.persistence.CustomerList</class>
    <class>com.github.jinahya.persistence.Film</class>
    <class>com.github.jinahya.persistence.Film$RatingConverter</class>
    <class>com.github.jinahya.persistence.Film$SpecialFeaturesConverter</class>
    <class>com.github.jinahya.persistence.FilmActor</class>
    <class>com.github.jinahya.persistence.FilmCategory</class>
    <class>com.github.jinahya.persistence.Inventory</class>
    <class>com.github.jinahya.persistence.Language</class>
    <class>com.github.jinahya.persistence.NicerButSlowerFilmList</class>
    <class>com.github.jinahya.persistence.Payment</class>
    <class>com.github.jinahya.persistence.Rental</class>
    <class>com.github.jinahya.persistence.Staff</class>
    <class>com.github.jinahya.persistence.StaffList</class>
    <class>com.github.jinahya.persistence.Store</class>
    <exclude-unlisted-classes/>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:33306/sakila"/>
      <property name="jakarta.persistence.jdbc.user" value="user"/>
      <property name="jakarta.persistence.jdbc.password" value="password"/>
      <!-- https://wiki.eclipse.org/EclipseLink/Examples/JPA/Logging -->
      <!--      <property name="eclipselink.logging.level" value="OFF"/>-->
      <property name="eclipselink.weaving" value="static"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <property name="eclipselink.logging.level.sql" value="FINE"/>
      <!--      <property name="org.hibernate.SQL" value="DEBUG"/>-->
      <!--      <property name="org.hibernate.type" value="TRACE"/>-->
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
